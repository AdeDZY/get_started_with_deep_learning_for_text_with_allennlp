{
  "dataset_reader": {
    "type": "csv_classification_reader",
    "delimiter": ",",
    "pos_input": 1,
    "pos_gold_label": 2,
    "tokenizer": {
      "word_splitter": {
        "language": "es"
      }
    },
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "train_data_path": "experiments/data/coset-train.csv",
  "validation_data_path": "experiments/data/coset-dev.csv",
  "model": {
    "type": "sequence_classifier",
    "text_field_embedder": {
            "tokens": {
              "type": "embedding",
              "pretrained_file": "experiments/data/vectors/fasttext_es.tar.gz",
              "embedding_dim": 300,
              "trainable": false
          }
    },
    "encoder": {
            "type": "cnn",
            "num_filters": 50,
            "embedding_dim": 300
    }
  },
  "iterator": {"type": "bucket", "batch_size": 16},
  "trainer": {
    "optimizer": {
      "type": "adam"
    },
    "num_epochs": 5,
    "patience": 2,
    "cuda_device": -1
  }
}
